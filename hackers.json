  "quizzes": {
    "cs": [
      {
        "id": "q_proto_1",
        "difficulty": 1,
        "question": "Který protokol je vhodný pro bezpečné šifrované spojení v prohlížeči?",
        "options": ["HTTP", "FTP", "HTTPS", "TELNET"],
        "correctIndex": 2,
        "feedback": {
          "correct": "Správně! HTTPS přidává TLS/SSL vrstvu pro šifrovanou komunikaci.",
          "incorrect": "Zkus to znovu. Hledej variantu s TLS/SSL."
        },
        "next": {
          "onCorrect": "mission_ping",
          "onIncorrect": "hint_proto_tls"
        },
        "hints": {
          "hint_proto_tls": "Hledej protokol, který končí na 'S' jako 'secure'."
        }
      },
      {
        "id": "q_trace_1",
        "difficulty": 2,
        "question": "Co ti nejčastěji odhalí nástroj traceroute?",
        "options": [
          "Otevřené porty na cíli",
          "Počet a adresy mezilehlých uzlů",
          "Rychlost disku serveru",
          "Verzi operačního systému cíle"
        ],
        "correctIndex": 1,
        "feedback": {
          "correct": "Přesně tak. Trasy a latence mezi hop-y.",
          "incorrect": "Ne. Traceroute neměří porty ani OS."
        },
        "next": {
          "onCorrect": "mission_trace",
          "onIncorrect": "retry"
        }
      },
      {
        "id": "q_pwd_1",
        "difficulty": 1,
        "question": "Jaká volba je nejbezpečnější jako heslo?",
        "options": [
          "P@ssw0rd",
          "Iloveplzen",
          "hT8#kQ4pZ1_!m",
          "12345678"
        ],
        "correctIndex": 2,
        "feedback": {
          "correct": "Nice. Délka + různé znaky + neuhodnutelnost.",
          "incorrect": "Krátká nebo slovníková hesla jsou snadno prolomitelná."
        },
        "next": { "onCorrect": "unlock_bonus", "onIncorrect": "retry" }
      }
    ],
    "en": [
      {
        "id": "q_proto_1",
        "difficulty": 1,
        "question": "Which protocol is used for secure encrypted browsing?",
        "options": ["HTTP", "FTP", "HTTPS", "TELNET"],
        "correctIndex": 2,
        "feedback": {
          "correct": "Correct. HTTPS adds TLS/SSL encryption.",
          "incorrect": "Try again. Look for TLS/SSL."
        },
        "next": { "onCorrect": "mission_ping", "onIncorrect": "hint_proto_tls" },
        "hints": { "hint_proto_tls": "Pick the one ending with 'S' for secure." }
      },
      {
        "id": "q_trace_1",
        "difficulty": 2,
        "question": "What does traceroute typically reveal?",
        "options": [
          "Open ports on target",
          "Number and addresses of hops",
          "Disk speed of server",
          "Target OS version"
        ],
        "correctIndex": 1,
        "feedback": {
          "correct": "Exactly: path and latency across hops.",
          "incorrect": "Nope. Not ports or OS."
        },
        "next": { "onCorrect": "mission_trace", "onIncorrect": "retry" }
      },
      {
        "id": "q_pwd_1",
        "difficulty": 1,
        "question": "Which is the safest password option?",
        "options": ["P@ssw0rd", "Iloveplzen", "hT8#kQ4pZ1_!m", "12345678"],
        "correctIndex": 2,
        "feedback": {
          "correct": "Nice. Long, varied, non-guessable.",
          "incorrect": "Short or dictionary words are weak."
        },
        "next": { "onCorrect": "unlock_bonus", "onIncorrect": "retry" }
      }
    ]
  },

